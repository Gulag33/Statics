<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:elevation="10dp">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@drawable/principal"
        android:id="@+id/imageView" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/btnllamar"
        android:text="Llamar al Centro de Asistencia"
        android:layout_marginTop="26dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_below="@+id/btnsolicitar"
        android:layout_centerHorizontal="true"
        android:background="@color/light_green_accent"
        android:textColor="#ffffff" />


    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/btnsolicitar"
        android:text="Solicitar Asistencia Online"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:background="@color/blue_accent"
        android:textColor="#ffffff" />


</RelativeLayout>
