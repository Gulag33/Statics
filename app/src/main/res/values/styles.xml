<resources>


    <!-- Base application theme. -->
    <style name="AppTheme" parent="AppTheme.Base"></style>



    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Habilitar la Toolbar -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <!--Colores-->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/colorAccent</item>

    </style>

    <style name="AppTheme.TranslucentSystemBars" parent="AppTheme">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>

    </style>

    <style name="HeaderBar">
        <item name="android:background">?colorPrimary</item>
        <item name="android:elevation">@dimen/headerbar_elevation</item>
    </style>

    <style name="CustomActionBar" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:windowActionBarOverlay">true</item>
        <item name="toolbarStyle">@style/Widget.AppCompat.Toolbar</item>

        <!-- Support library compatibility -->
        <item name="windowActionBarOverlay">true</item>
    </style>

    <style name="Widget.CardContent" parent="android:Widget">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <!--AlertDialog-->

    <style name="AlertDialogCustom" parent="@android:style/Theme.Dialog">
        <item name="android:colorForeground">#ffffff</item>
        <item name="android:windowBackground">@drawable/fondodialogo</item>
        <item name="android:textSize">10sp</item>
    </style>







</resources>
